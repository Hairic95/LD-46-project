script/source = "extends Control

func _ready():
	$BTN_PLAY.connect(\"pressed\", self, \"on_play_game\")
	BlackScreen.connect(\"on_background_visible\", self, \"on_hide_menu\")
	BlackScreen.connect(\"before_background_invisible\", self, \"before_start\")
	
	# TODO: if this will be a desktop game, implement this button
	#$BTN_QUIT.connect(\"pressed\", self, \"on_quit_game\")

func on_play_game():
	BlackScreen.fade_in_screen(\"INTRO\")

# Hide the menu when the background has faded in
func on_hide_menu():
	if GLOBALS.menu_visible:
		visible = false
		GLOBALS.menu_visible = false

# Load the main game scene before the background starts to fade out
func before_start():
	if BlackScreen.current_entity_name == \"INTRO\":
		if !GLOBALS.game_started:
			# Intro text is being displayed, start loading the game
			GLOBALS.game_scene = load(\"res://Src/Scenes/GameScene.tscn\").instance()
			get_node(\"/root\").add_child(GLOBALS.game_scene)
			GLOBALS.game_started = true
			# The GameScene will take care of the program flow from here on
"

